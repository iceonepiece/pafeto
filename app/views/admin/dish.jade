doctype html
html
	head
		title Admin Pafeto
	body
		h3 Dish Info
		
		form(action='/dishes/' + dish.id + '/edit', method='post')
			
			div
				label(for='id') Id 
				input(type='text', name='id', value=dish.id)

			div
				label(for='Restaurant id') Restaurant id 
				input(type='text', name='restaurant_id', value=dish.restaurant_id)

			div
				label(for='Name') Name 
				input(type='text', name='name', size=50, value=dish.name)

			div
				label(for='Price') Price 
				input(type='text', name='price', value=dish.price)

			div
				label(for='Description') Description 
				input(type='text', name='description', size=50, value=dish.description)

			div
				input(type='submit', value='OK')
					
