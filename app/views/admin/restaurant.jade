doctype html
html
	head
		title Admin Pafeto
	body
		h3 Restaurant Info
		
		form(action='/restaurants/' + restaurant.id + '/edit', method='post')
			
			div
				label(for='Id') Id 
				input(type='text', name='id', value=restaurant.id)

			div
				label(for='Cuisine') Cuisine 
				input(type='text', name='cuisine_id', size=50, value=restaurant.cuisine_id)

			div
				label(for='Name') Name 
				input(type='text', name='name', size=50, value=restaurant.name)

			div
				label(for='Description') Description 
				input(type='text', name='description', size=50, value=restaurant.description)

			div
				label(for='Web') Web 
				input(type='text', name='web', size=50, value=restaurant.web)

			div
				label(for='Facebook') Facebook 
				input(type='text', name='fb', size=50, value=restaurant.fb)

			div
				label(for='Instagram') Instagram 
				input(type='text', name='ig', size=50, value=restaurant.ig)

			div
				label(for='Line') Line 
				input(type='text', name='line', size=50, value=restaurant.line)

			div
				label(for='Location') Location 
				input(type='text', name='location', size=50, value=restaurant.location)

			div
				label(for='Phone') Phone 
				input(type='text', name='phone', size=50, value=restaurant.phone)

			div
				input(type='submit', value='OK')
					
